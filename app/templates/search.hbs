{{auto-suggest source=controller destination=filters}}

{{#if filters}}
    {{#tab-view}}
      {{#tab-pane name="People" count='10'}}
        <ul class="result-list">
            {{#each people.paginatedContent}}
                <li class="search-result" {{action 'view' this 'person'}}>
                  {{profile-img size='sm' image=profileImage}}
                  {{#link-to 'person' this}}{{firstName}} {{lastName}}{{/link-to}}
                  <p class="small">
                    {{location}} &#151; {{level}} <!-- ascii dash -->
                  </p>
                </li>
            {{else}}
                <li>No Results</li>
            {{/each}}
        </ul>
        {{pagination-links page=peopleCtrl.page pages=peopleCtrl.pages}}
      {{/tab-pane}}

      {{#tab-pane name="Clients" count='5'}}
        <ul>
            {{#each clients}}
                <li>{{name}}</li>
            {{else}}
                <li>No Results</li>
            {{/each}}
        </ul>
      {{/tab-pane}}
    {{/tab-view}}
{{/if}}
